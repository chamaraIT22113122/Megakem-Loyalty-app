# Server Configuration
NODE_ENV=development
PORT=5000

# Database
MONGODB_URI=mongodb://localhost:27017/megakem-loyalty
# Or use MongoDB Atlas:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/megakem-loyalty

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production_min_32_chars
JWT_EXPIRE=7d
JWT_REFRESH_EXPIRE=30d

# Admin Default Credentials (CHANGE IMMEDIATELY IN PRODUCTION)
ADMIN_EMAIL=admin@megakem.com
ADMIN_PASSWORD=ChangeThisPassword123!

# Frontend URLs (for CORS)
FRONTEND_URL=http://localhost:3000
FRONTEND_URL_PROD=https://yourdomain.com

# Rate Limiting
MAX_LOGIN_ATTEMPTS=5
LOGIN_RATE_LIMIT_WINDOW=15

# Session & Security
SESSION_TIMEOUT=3600000
TOKEN_REFRESH_THRESHOLD=300000
